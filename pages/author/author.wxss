.container {
  background: #000;
  padding-bottom: 40rpx;
}

/* 作者信息 */
.author-info {
  background: #111;
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.author-name {
  font-size: 34rpx;
  color: #fff;
}

.verse-count {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

.follow-btn {
  padding: 12rpx 30rpx;
  font-size: 28rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.follow-btn.active {
  color: #fff;
  background: rgba(255, 255, 255, 0.2);
}


.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

.stat-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

.description {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  margin-top: 20rpx;
  text-align: center;
}

/* 偈语列表 */
.verses-section {
  margin-top: 20rpx;
  background: #111;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 30rpx;
  padding-left: 10rpx;
}

.verse-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 20rpx;
}

.verse-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.verse-text {
  font-size: 34rpx;
  color: #fff;
  line-height: 1.6;
  letter-spacing: 1rpx;
  margin-bottom: 20rpx;
}

.stats {
  display: flex;
  gap: 32rpx;
}

.meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.source {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

.meta .stats {
  display: flex;
  gap: 24rpx;
}

.meta .stat {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.meta .icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

.meta .stat text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

.loading text {
  color: #fff;
  animation: shimmer 2s infinite;
  font-weight: 300;
}

@keyframes shimmer {
  0% { opacity: 0.5; }
  50% { opacity: 1; }
  100% { opacity: 0.5; }
} 