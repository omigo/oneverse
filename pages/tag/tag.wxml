<view class="container">
  <!-- 标签信息 -->
  <view class="tag-info">
    <view class="header">
      <text class="name">{{tag.name}}</text>
      <view class="follow-btn {{tag.isFollowed ? 'active' : ''}}" bindtap="handleFollow">
        {{tag.isFollowed ? '已关注' : '关注'}}
      </view>
    </view>
    <view class="stats">
      <view class="stat-item">
        <text class="count">{{tag.verseCount}}</text>
        <text class="label">偈语</text>
      </view>
      <view class="stat-item">
        <text class="count">{{tag.followerCount}}</text>
        <text class="label">关注者</text>
      </view>
    </view>
    <text class="description" wx:if="{{tag.description}}">{{tag.description}}</text>
  </view>

  <!-- 相关标签 -->
  <view class="related-tags" wx:if="{{relatedTags.length}}">
    <view class="section-title">相关标签</view>
    <view class="tags-list">
      <view class="tag-item" 
            wx:for="{{relatedTags}}" 
            wx:key="name"
            bindtap="navigateToTag"
            data-tag="{{item}}">
        <text class="tag-name">{{item.name}}</text>
        <text class="verse-count">{{item.verseCount}}条偈语</text>
      </view>
    </view>
  </view>

  <!-- 标签下的偈语列表 -->
  <view class="verses-section">
    <view class="section-title">全部偈语</view>
    <view class="verses-list">
      <view class="verse-item" 
            wx:for="{{verses}}" 
            wx:key="id"
            bindtap="navigateToverse"
            data-verse="{{item}}">
        <text class="verse-text">{{item.verse}}</text>
        <view class="meta">
          <view class="info">
            <text class="author">{{item.author}}</text>
            <text class="source" wx:if="{{item.source}}">{{item.source}}</text>
          </view>
          <view class="stats">
            <view class="stat">
              <image class="icon" src="/assets/icons/{{item.isLiked ? 'like-active' : 'like'}}.png"></image>
              <text>{{item.likes || 0}}</text>
            </view>
            <view class="stat">
              <image class="icon" src="/assets/icons/comment.png"></image>
              <text>{{item.comments || 0}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>