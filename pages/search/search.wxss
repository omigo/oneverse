.container {
  display: flex;
  flex-direction: column;
}

.search-header {
  background: rgba(0, 0, 0, 0.5);
  padding: 40rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.search-bar {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  padding: 12rpx 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  opacity: 0.7;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #fff;
}

.search-btn {
  font-size: 28rpx;
  color: #fff;
  margin-left: 30rpx;
}

/* 偈语列表样式 */
.verses-list, .authors-list, .sources-list, .tags-list {
  margin-top: 20rpx;
  background: #111;
  padding: 30rpx;
}

.verse-item {
  padding: 32rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.verse-item:last-child {
  border-bottom: none;
}

.verse-text {
  font-size: 34rpx;
  color: #fff;
  line-height: 1.6;
  letter-spacing: 1rpx;
  margin-bottom: 20rpx;
}

.meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.source, .author {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

.meta .stats {
  display: flex;
  gap: 24rpx;
}

.meta .stat {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.meta .icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

.meta .stat text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.tabs {
  display: flex;
  background: rgba(0, 0, 0, 0.5);
  padding: 0 20rpx;
  position: fixed;
  top: 104rpx;
  left: 0;
  right: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  position: relative;
}

.tab-item.active {
  color: #fff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  height: 4rpx;
  background: #fff;
  border-radius: 2rpx;
}

.count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-left: 8rpx;
}

.results {
  margin-top: 184rpx;
  flex: 1;
  background: #000;
}

.author-item, .source-item, .tag-item {
  background: rgba(255, 255, 255, 0.05);
  padding: 30rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.08);
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name {
  font-size: 32rpx;
  color: #fff;
}

.verse-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
  color: rgba(255, 255, 255, 0.5);
}

.no-result-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  letter-spacing: 1rpx;
}