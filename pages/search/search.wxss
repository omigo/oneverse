.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

.search-header {
  background: #fff;
  padding: 40rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 30rpx;
  padding: 12rpx 30rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
}

/* 偈语列表样式 */
.verses-list, .authors-list, .sources-list, .tags-list {
  margin-top: 60rpx;
}

.verse-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.verse-item:last-child {
  border-bottom: none;
}

.verse-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

.meta {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.source, .author{
  font-size: 24rpx;
  color: #999;
}

.stats {
  display: flex;
  gap: 30rpx;
}

.stat {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.icon {
  width: 32rpx;
  height: 32rpx;
}

.stat text {
  font-size: 24rpx;
  color: #999;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 0 20rpx;
  position: fixed;
  top: 104rpx;
  left: 0;
  right: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  height: 4rpx;
  background: #333;
  border-radius: 2rpx;
}

.count {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.results {
  margin-top: 100rpx;
  flex: 1;
  padding: 20rpx;
}

.verse-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.verse-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

.verse-meta {
  font-size: 24rpx;
  color: #999;
}

.verse-meta .author {
  margin-right: 20rpx;
  color: #fff;
}

.author-item, .source-item, .tag-item {
  background: #fff;
  padding: 60rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.name {
  font-size: 32rpx;
  color: #333;
}
.verse-count {
  font-size: 24rpx;
  color: #999;
}

.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.no-result-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.no-result text {
  font-size: 28rpx;
  color: #999;
}