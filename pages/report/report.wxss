.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
}

/* 偈语预览 */
.verse-preview {
  background: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.verse-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

.author {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
  text-align: right;
}

/* 举报表单 */
.report-form {
  background: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.reasons-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.reason-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.reason-item text {
  font-size: 28rpx;
  color: #333;
}

.description-section {
  margin-bottom: 40rpx;
}

.description-input {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #999;
  color: rgba(255, 255, 255, 0.6);
  font-size: 32rpx;
  border-radius: 44rpx;
}

.submit-btn.active {
  background: #333;
  color: #fff;
}

/* 提示文本 */
.tips {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.tips text {
  font-size: 24rpx;
  color: #999;
}