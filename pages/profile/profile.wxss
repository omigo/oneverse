.container {
  background: #000;
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-info {
  background: #111;
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-btn {
  background: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.avatar-btn::after {
  display: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.login-btn {
  background: none;
  color: #ffffff;
  font-size: 32rpx;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.login-btn::after {
  display: none;
}

.nickname {
  color: #ffffff;
  font-size: 32rpx;
  margin-top: 20rpx;
}

/* 收藏列表 */
.collection-list {
  background: #2a2a2a;
  border-radius: 20rpx;
  padding: 30rpx;
}

.title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.loading, .empty {
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
}

.verse-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.verse-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 20rpx;
}

.verse-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.verse-text {
  font-size: 34rpx;
  color: #fff;
  line-height: 1.6;
  letter-spacing: 1rpx;
  margin-bottom: 20rpx;
}

.meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.author, .source {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

.meta .stats {
  display: flex;
  gap: 24rpx;
}

.meta .stat {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.meta .icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

.meta .stat text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.loading text {
  color: #fff;
  animation: shimmer 2s infinite;
  font-weight: 300;
}

@keyframes shimmer {
  0% { opacity: 0.5; }
  50% { opacity: 1; }
  100% { opacity: 0.5; }
}

.comment-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.comment-box {
  width: 80%;
  background: #111;
  border-radius: 16rpx;
  padding: 32rpx;
}

.comment-input {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.comment-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.cancel-btn, .submit-btn {
  font-size: 28rpx;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  border: none;
}

.cancel-btn {
  color: rgba(255, 255, 255, 0.5);
  background: rgba(255, 255, 255, 0.1);
}

.submit-btn {
  color: #fff;
  background: rgba(255, 255, 255, 0.2);
}

.cancel-btn::after, .submit-btn::after {
  border: none;
}

/* 偈语列表 */
.verses-section {
  margin-top: 20rpx;
  background: #111;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 30rpx;
  padding-left: 10rpx;
}

.verse-count {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.5);
}