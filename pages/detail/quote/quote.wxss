.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #000000 0%, #1a1a1a 100%);
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

page {
  background: #1a1a1a;
}

/* 偈语内容区域 */
.quote-section {
  padding: 0;
  box-sizing: border-box;
  width: 100%;
}

.quote-content {
  display: flex;
  flex-direction: column;
  padding-top: 60rpx;
  width: 100%;
}

.quote-text {
  font-size: 44rpx;
  color: #fff;
  line-height: 1.6;
  font-weight: 300;
  letter-spacing: 2rpx;
  margin-bottom: 30rpx;
  animation: fadeInUp 0.6s ease-out;
  padding: 30rpx 40rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.08);
  width: 100%;
  box-sizing: border-box;
}

.quote-text::before {
  content: '"';
  position: absolute;
  left: -40rpx;
  top: -60rpx;
  font-size: 120rpx;
  color: #fff;
  opacity: 0.15;
  font-family: "Times New Roman", serif;
}

.meta-info {
  margin: 20rpx 0;
  animation: fadeIn 0.8s ease-out;
  display: flex;
  gap: 20rpx;
  align-items: center;
  padding: 0 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.author, .source {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
  letter-spacing: 1rpx;
}

.source::before {
  content: '·';
  margin: 0 10rpx;
  color: rgba(255, 255, 255, 0.3);
}

.label {
  color: rgba(255, 255, 255, 0.9);
}

.value {
  color: rgba(255, 255, 255, 0.9);
}

.tags {
  margin: 20rpx 0;
  animation: fadeIn 0.8s ease-out;
  padding: 0 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  background: rgba(255, 255, 255, 0.08);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  transition: all 0.3s ease;
}

.tag:active {
  background: rgba(255, 255, 255, 0.15);
}

.explanation {
  margin: 30rpx 0;
  padding: 30rpx 40rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.08);
  animation: fadeInUp 0.6s ease-out;
  width: 100%;
  box-sizing: border-box;
}

.explanation .label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 16rpx;
  display: block;
}

.explanation .value {
  font-size: 28rpx;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  font-weight: 300;
  letter-spacing: 1rpx;
}

.actions {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 40rpx;
  gap: 60rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  width: 100%;
  box-sizing: border-box;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.icon-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.9;
}

.count {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.share-btn {
  padding: 0 !important;
  margin: 0 !important;
  background: none !important;
  border: none !important;
  line-height: 1 !important;
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  gap: 8rpx !important;
  width: auto !important
}

.share-btn::after {
  display: none;
}

.share-count {
  font-size: 24rpx !important;
  color: rgba(255, 255, 255, 0.9) !important;
  line-height: 1 !important;
}

.action-item text, .share-btn text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1;
}

.action text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 激活状态的图标 */
.action-item.active .icon,
.share-btn.active .icon {
  opacity: 1;
}

.action-item.active text,
.share-btn.active text {
  color: rgba(255, 255, 255, 1);
}

/* 评论区域 */
.comments-section {
  margin-top: 20rpx;
  padding: 0;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.08);
  margin: 20rpx 0;
  width: 100%;
}

.comments-list {
  max-height: calc(100vh - 600rpx);
  width: 100%;
}

.comment-item {
  display: flex;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
  width: 100%;
  box-sizing: border-box;
}

.comment-item:first-child {
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}

.comment-item:last-child {
  border-bottom: none;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-content {
  flex: 1;
  width: 100%;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.username {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.comment-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

.comment-actions {
  display: flex;
  gap: 30rpx;
  margin-top: 16rpx;
}

.action {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.replies {
  margin-top: 20rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 12rpx;
  border: 1px solid rgba(255, 255, 255, 0.08);
}

.reply-item {
  margin: 10rpx 0;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

.reply-item .username {
  color: #fff;
  margin-right: 10rpx;
}

.no-comment {
  text-align: center;
  padding: 100rpx 0;
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

/* 评论输入框 */
.comment-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.05);
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  backdrop-filter: blur(10px);
}

.input {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #fff;
}

.submit-btn {
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  background: rgba(255, 255, 255, 0.08);
  border-radius: 30rpx;
}

.submit-btn.active {
  color: #fff;
  background: rgba(255, 255, 255, 0.15);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.icon-small {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.9;
}

.action text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}