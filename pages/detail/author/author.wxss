.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 40rpx;
}

/* 作者信息 */
.author-info {
  background: #fff;
  padding: 40rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.name {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.follow-btn {
  padding: 12rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 30rpx;
}

.follow-btn.active {
  color: #fff;
  background: #333;
}

.stats {
  display: flex;
  gap: 60rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.count {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 偈语列表 */
.quotes-section {
  margin-top: 20rpx;
  background: #fff;
  padding: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.quote-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.quote-item:last-child {
  border-bottom: none;
}

.quote-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

.meta {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.source {
  font-size: 24rpx;
  color: #999;
}

.stats {
  display: flex;
  gap: 30rpx;
}

.stat {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.icon {
  width: 32rpx;
  height: 32rpx;
}

.stat text {
  font-size: 24rpx;
  color: #999;
} 