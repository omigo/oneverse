.container {
  min-height: 100vh;
  background: #000;
  padding-bottom: 40rpx;
}

/* 收藏信息 */
.collection-info {
  background: #111;
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  color: #fff;
  font-weight: 500;
}

.verse-count {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 偈语列表 */
.verses-section {
  margin-top: 20rpx;
}

.verse-item {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.verse-item:last-child {
  border-bottom: none;
}

.verse-text {
  font-size: 34rpx;
  color: #fff;
  line-height: 1.6;
  letter-spacing: 1rpx;
  margin-bottom: 24rpx;
}

.meta {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.stats {
  display: flex;
  gap: 24rpx;
}

.stat {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.stat text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

.loading text {
  color: #fff;
  animation: shimmer 2s infinite;
  font-weight: 300;
}

@keyframes shimmer {
  0% { opacity: 0.5; }
  50% { opacity: 1; }
  100% { opacity: 0.5; }
} 