.container {
  width: 100%;
  height: auto;
  background: #000;
  padding: 30rpx;
  display: block;
}

.form-group {
  background: #111;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.textarea {
  height: 200rpx;
  padding: 20rpx 0;
  line-height: 1.6;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 10rpx;
}

.tags-input {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  min-height: 80rpx;
  padding: 10rpx 0;
}

.tag-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.delete-tag {
  margin-left: 10rpx;
  color: rgba(255, 255, 255, 0.5);
  font-size: 28rpx;
}

.tag-input {
  flex: 1;
  min-width: 200rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #fff;
}

.submit-btn {
  text-align: center;
  border-radius: 44rpx;
  background-color: #7272727a;
  color: rgb(255, 255, 255);
}

.submit-btn[disabled] {
  background-color: #2f2f2f7a;
  color: rgba(255, 255, 255, 0.3);
}
wx-button[disabled]:not([type]) {
  background-color: #2f2f2f7a;
  color: rgba(92, 92, 92, 0.339);
}

.tags-text {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  word-break: break-all;
}